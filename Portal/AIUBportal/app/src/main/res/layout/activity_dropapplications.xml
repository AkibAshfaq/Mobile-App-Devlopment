<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F0F8FF"
    tools:context=".Dropapplications">

    <TextView
        android:id="@+id/textviewview_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Drop Application"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#004E8A"
        android:gravity="center"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edittext_studentid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="Student ID"
        android:inputType="text"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/edittext_coursecode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Course Code to Drop"
        android:inputType="textCapCharacters"
        android:padding="15dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_studentid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edittext_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Section"
        android:inputType="textCapCharacters"
        android:padding="15dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_coursecode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edittext_reason"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="Detailed Reason for Dropping the Course"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT APPLICATION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#004E8A"
        android:padding="14dp"  android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_reason"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textviewview_policy_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="*Submission is subject to academic rules and deadlines."
        android:textSize="12sp"
        android:textColor="#CC0000"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/submitbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>