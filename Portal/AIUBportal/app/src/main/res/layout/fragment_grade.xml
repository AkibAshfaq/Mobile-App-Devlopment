<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="serif"
                android:text="Course Grade"
                android:textSize="34sp"
                app:layout_constraintBottom_toTopOf="@+id/Noticebox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.458"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.46" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/Noticebox"
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="148dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/noticelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="1dp">

                            <TextView
                                android:id="@+id/CourseName1"
                                android:layout_width="270dp"
                                android:layout_height="match_parent"
                                android:fontFamily="serif"
                                android:padding="10dp"
                                android:text="Advance Programming In .NET [C]"
                                android:textAlignment="textStart"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/gradeview1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#9FE792"
                                android:fontFamily="serif"
                                android:padding="15dp"
                                android:shadowColor="#020202"
                                android:text=" 80 (B+) "
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/noticesubject2"
                                android:layout_width="270dp"
                                android:layout_height="match_parent"
                                android:fontFamily="serif"
                                android:padding="10dp"
                                android:text="Machine Learning [L]"
                                android:textAlignment="textStart"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/gradeview2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#F4E99E"
                                android:fontFamily="serif"
                                android:padding="15dp"
                                android:shadowColor="#020202"
                                android:text="72 (C+)"
                                android:textAlignment="center"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>