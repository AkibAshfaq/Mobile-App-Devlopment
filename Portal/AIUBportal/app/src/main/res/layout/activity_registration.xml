                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="190dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:backgroundTint="#6ABEDE"
                            android:text="Home" />

                        <Button
                            android:id="@+id/Donebtn"
